@model OnlineShopping.Models.Size

@{
    ViewData["Title"] = "Додади број";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Додади број</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductSize" class="control-label"></label>
                <input asp-for="ProductSize" class="form-control" />
                <span asp-validation-for="ProductSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додади" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад кон листата</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
