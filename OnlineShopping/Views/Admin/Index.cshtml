@model IEnumerable<OnlineShopping.Areas.Identity.Data.OnlineShoppingUser>

@{ ViewData["Title"] = "Корисници"; }

<h1>Корисници</h1>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                Id на корисник
            </th>
            <th>
                Име и презиме
            </th>
            <th>
                Еmail адреса
            </th>
            <th>
                Улога
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Дали сте сигурни дека сакате да го избришете @(item.Email)?');"> Избриши </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
